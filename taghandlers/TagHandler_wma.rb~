require "wmainfo"

class TagHandler_wma
    def initialize(file)
        @info = WmaInfo.new(file)
        makeFileName(info.tags["AlbumArtist"], info.tags["AlbumTitle"], 
                     info.tags["Title"], "flac")
    end

    { 
        :artist => "AlbumArtist", 
        :album => "AlbumTitle", 
        :title => "Title", 
        :genre => "Genre",
        :tracknumber => "TrackNumber"
    }.each { |k,v|
        def #{k}
            TagHandler.tag(@info.tags, v)
        }
    }
end
